generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  //provider = "sqlite"
  //url      = "file:./dev.db"
}

model Category {
  id  Int   @id @default(autoincrement())
  name  String @unique
  sort_order  Int?
  entries     Entry[]
}

model Entry {
  id          Int     @id @default(autoincrement())
  suma        String?  @unique
  infinity    String?  @unique

  suma_desc   String?
  infinity_desc   String?
  brand       String

  n_items       Int
  item_size       Float
  item_unit       String

  suma_price  Float?
  infinity_price  Float?

  fareshares_price  Float
  prev_fareshares_price  Float?
  price_updatedAt DateTime?

  vat     Boolean
  organic     Boolean

  sort_order  Int?
  
  category  Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int

  preferred_supplier    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  updatedBy String

  // user_orders     UserOrder[]
}

model User {
  id  Int   @id @default(autoincrement())
  username  String @unique
  hashed_password  String
  is_admin  Boolean
  is_member  Boolean @default(false)

  user_transactions   Transaction[]

  // budget_available Float @default(0)
  // budget_committed Float @default(0)
  // user_orders     UserOrder[]
}

